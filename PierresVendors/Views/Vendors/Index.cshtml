@using PierresVendors.Models;
@{
  Layout = "_Layout";
}
<div class = "container">
 <h1>Welcome to Vendors HTML</h1>
 @if (@Model.Count == 0)
 {
   <h3>No vendors have been added.</h3>
 }
 @foreach (Vendor vendor in Model)
 {
   <h3><a href = "/vendors/@vendor.Id">@vendor.VendorName</a></h3>
 }
 <p><a href="/">Back Home</a></p>
</div>
