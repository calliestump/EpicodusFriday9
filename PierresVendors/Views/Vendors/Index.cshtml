@using PierresVendor.Models;
@{
  Layout = "_Layout";
}
<div class = "container">
  <div class = "jumbotron">
    <h1><ul><strong>Pierres Vendors</ul></strong></h1>
    @if (@Model.Count == 0)
    {
      <h3>Pierres Bakery currently doesn't have any Vendors.</h3>
    }

    @foreach (Vendor vendor in Model)
    {
      <h2><a href = "/vendors/@vendor.Id">@vendor.VendorName</a></h2>
    }
    <br><br><p><a href="/">Home Page</a></p>
    <p><a href='/vendors/new'>Add a Vendor to Pierres Bakery</a></p>
  </div>
</div>
