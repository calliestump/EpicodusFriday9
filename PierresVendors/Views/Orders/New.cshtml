@{
  Layout = "_Layout";
}
<div class = "container">
  <div class = "jumbotron">
    <p>@Model.VendorName Order Form</p>
    <!--remove "orders" in form action for it to return to localhost:5000/vendors/1 or add "@Model.Id" after "order" to make it return to localhost:5000/vendors/1/orders/1 -->
    <form action= "/vendors/@Model.Id/orders/" method= "post">
      <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
      <label for="orderTitle">Order Title:</label><br>
      <input id="orderTitle" name="orderTitle"><br><br>
      <label for="orderDescription">Orders Description:</label><br>
      <input id="orderDescription" name="orderDescription"><br><br>
      <label for="orderPrice">Orders Price:</label><br>
      <input id="orderPrice" name="orderPrice"><br><br>
      <label for="orderDate">Orders Date:</label><br>
      <input id="orderDate" name="orderDate"><br><br>
      <button type='submit'>Add Order</button><br><br>
    </form>
    <p><a href="/">Home Page</a><br></p>
    <p><a href="/vendors">Pierres Vendors</a></p>
  </div>
</div>
